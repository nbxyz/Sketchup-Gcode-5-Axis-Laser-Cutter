require 'sketchup.rb'


# Default code, use or delete...
mod = Sketchup.active_model # Open model
ent = mod.entities # All entities in model
sel = mod.selection # Current selection
tr = Geom::Transformation.new()
pts = []
(0..20).each { |i|
  pts[i] = 30+rand(20)
}
corn = []
(0..20).each { |i|
  corn[i] = 7+rand(8)
}

# Create the box
main_face = ent.add_face [0,0,0], [pts[0],0,0], [pts[0],pts[1],0], [0,pts[1],0]
main_face.reverse!
main_face.pushpull pts[3]
# Draw a line across the upper-right corner
cut1 = ent.add_line [pts[0]-corn[0],pts[1],pts[3]], [pts[0],0,pts[3]]
# Remove the new face
cut1.faces[0].pushpull -pts[3]

cut2 = ent.add_line [0,pts[1],pts[3]-corn[5]], [0,0,pts[3]]
# Remove the new face
